<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.BookCollectionListController">
   <children>
      <Label text="Collection" />
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <MFXScrollPane hbarPolicy="NEVER" minWidth="180.0" vbarPolicy="ALWAYS" HBox.hgrow="ALWAYS">
               <content>
                  <VBox fx:id="listPane" />
               </content>
            </MFXScrollPane>
            <VBox maxWidth="400.0" minWidth="250.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label text="Details" />
                  <AnchorPane maxWidth="400.0" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
